---
// BaseLayout.astro - Tüm sayfalarda kullanılacak ortak temel düzen
import Navigation from '../components/Navigation.astro';

const { pageTitle, description = "İstanbul'da bina güçlendirme, karbon fiber, kolon, kiriş güçlendirme hizmetleri. CFRP uygulamalarında uzman ekip." } = Astro.props;

// Sayfa tipine göre maksimum genişlik ayarı
// Ana sayfada daha geniş (1200px), diğer sayfalarda daha dar (800px)
const isHomePage = Astro.url.pathname === "/";
---

<html lang="tr">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
		<meta name="description" content={description} />
		<slot name="head" />
	</head>
	<body class={isHomePage ? "home-page" : "content-page"}>
		<header>
			<h1>{pageTitle}</h1>
			<Navigation />
		</header>
		
		<main>
			<slot />
		</main>
		
		<footer>
			<p>© {new Date().getFullYear()} İstanbul Bina Güçlendirme</p>
		</footer>
	</body>
</html>

<style is:global>
  :root {
    --max-width-home: 1200px;
    --max-width-content: 800px;
    --card-min-width: 280px;
  }
  
  body {
    font-family: Arial, sans-serif;
    margin: 0 auto;
    padding: 20px;
    line-height: 1.6;
  }
  
  .home-page {
    max-width: var(--max-width-home);
    width: 90%;
  }
  
  .content-page {
    max-width: var(--max-width-content);
  }
  
  header {
    border-bottom: 1px solid #ddd;
    margin-bottom: 20px;
    padding-bottom: 10px;
  }
  
  footer {
    margin-top: 30px;
    border-top: 1px solid #ddd;
    padding-top: 10px;
    font-size: 0.9em;
    color: #666;
    text-align: center;
  }
  
  /* Mobil uyumluluk için */
  @media (max-width: 768px) {
    :root {
      --card-min-width: 240px;
    }
    body {
      width: 95%;
      padding: 15px;
    }
  }
  
  @media (max-width: 600px) {
    .home-page, .content-page {
      width: 95%;
    }
  }
  
  @media (min-width: 1600px) {
    :root {
      --max-width-home: 1400px;
    }
  }
</style> 