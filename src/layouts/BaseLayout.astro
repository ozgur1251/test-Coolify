---
// BaseLayout.astro - Tüm sayfalarda kullanılacak ortak temel düzen
import Navigation from '../components/Navigation.astro';
// CSS import - build sırasında işlenecek
// import '../styles/base.css'; // KALDIRILDI - Manuel preload eklenecek
// import '../styles/blog.css'; // KALDIRILDI - Manuel preload eklenecek
// import '../styles/responsive-images.css'; // KALDIRILDI - Manuel preload eklenecek

const { 
	pageTitle, 
	description = "İstanbul'da bina güçlendirme, karbon fiber, kolon, kiriş güçlendirme hizmetleri. CFRP uygulamalarında uzman ekip.",
	keywords = "bina güçlendirme, karbon fiber, kolon güçlendirme, deprem güçlendirme, CFRP",
	imageUrl = "",
	imageAlt = "",
	type = "website",
	twitterCard = "summary_large_image",
	author = "İstanbul Bina Güçlendirme",
	noindex = false,
	structuredData
} = Astro.props;

// Sayfa tipine göre maksimum genişlik ayarı
// Blog detay sayfası için dar (800px), diğer tüm sayfalar için daha geniş (1200px)
const currentPath = Astro.url.pathname;
const isBlogDetail = currentPath.startsWith('/blog/') && currentPath !== '/blog/';

// Görsel URL'si için kontrol
const ogImageUrl = imageUrl ? (imageUrl.startsWith('http') ? imageUrl : (Astro.site ? new URL(imageUrl, Astro.site).href : imageUrl)) : '';

// Google Site Verification kodunu ortam değişkeninden al
const googleSiteVerification = import.meta.env.GOOGLE_SITE_VERIFICATION;
---

<html lang="tr">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
		<meta name="description" content={description} />
		<meta name="keywords" content={keywords} />
		<meta name="author" content={author} />
		{noindex && <meta name="robots" content="noindex" />}
		
		<!-- Google Site Verification -->
		{googleSiteVerification && <meta name="google-site-verification" content={googleSiteVerification} />}
		
		<!-- Performans optimizasyonları -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		
		<!-- Güvenlik başlıkları -->
		<meta http-equiv="X-XSS-Protection" content="1; mode=block" />
		<meta http-equiv="Strict-Transport-Security" content="max-age=31536000; includeSubDomains; preload" />
		<meta http-equiv="Referrer-Policy" content="strict-origin-when-cross-origin" />
		
		<!-- Compresyon ve cache kullanımını belirt -->
		<meta http-equiv="Cache-Control" content="max-age=604800" />
		<meta http-equiv="x-content-type-options" content="nosniff" />
		
		<!-- SEO iyileştirmeleri -->
		{!noindex && <meta name="robots" content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1" />}
		<link rel="canonical" href={Astro.site ? new URL(Astro.url.pathname, Astro.site).href : Astro.url.pathname} />
		
		<!-- Open Graph / Facebook -->
		<meta property="og:locale" content="tr_TR" />
		<meta property="og:type" content={type} />
		<meta property="og:title" content={pageTitle} />
		<meta property="og:description" content={description} />
		{Astro.site ? 
			<meta property="og:url" content={new URL(Astro.url.pathname.endsWith('/') ? Astro.url.pathname : `${Astro.url.pathname}/`, Astro.site).href} />
		:
			<meta property="og:url" content={Astro.url.pathname.endsWith('/') ? Astro.url.pathname : `${Astro.url.pathname}/`} />
		}
		{ogImageUrl && <meta property="og:image" content={ogImageUrl} />}
		{imageAlt && <meta property="og:image:alt" content={imageAlt} />}
		<meta property="og:site_name" content="İstanbul Bina Güçlendirme" />
		
		<!-- Twitter -->
		<meta name="twitter:card" content={twitterCard} />
		<meta name="twitter:title" content={pageTitle} />
		<meta name="twitter:description" content={description} />
		{ogImageUrl && <meta name="twitter:image" content={ogImageUrl} />}
		{imageAlt && <meta name="twitter:image:alt" content={imageAlt} />}

		<!-- Yapısal veri ekle -->
		{structuredData && <script is:inline type="application/ld+json" set:html={JSON.stringify(structuredData)} />}
		
		<!-- Kritik CSS doğrudan yerleştirilmiş olarak kalacak -->
		<style is:inline>
			/* Kritik CSS - Sayfanın ilk yüklenmesinde gerekli temel CSS */
			/* Temel değişkenler */
			:root {
				--color-primary: #0066cc;
				--color-primary-light: #e6f0fa;
				--color-text: #333;
				--color-background: #fff;
        /* NOT: Diğer değişkenler (secondary, border, grey vb.) kaldırıldı */
        /* Bunlar dış CSS yüklendiğinde geçerli olacak */
			}

			/* Temel sıfırlama ve görünüm */
			body {
				margin: 0;
				font-family: Arial, sans-serif; /* Orijinal font stack */
				line-height: 1.6;
				color: var(--color-text);
				background: var(--color-background);
				overflow-x: hidden;
			}

      /* ÖNEMLİ: Eklenen tüm header, nav, main, footer, mobil vb. stiller kaldırıldı */
      /* Bu stiller artık dış CSS dosyalarından (base.css, navigation.css) yüklenecek */

      /* === MINIMAL KRITIK BLOG DETAY STilleri === */
      /* Blog gönderileri için temel layout kısıtlamaları (ilk boyamayı etkiler) */
      main.blog-detail-page {
        max-width: 800px; /* Layout için kritik */
        margin-left: auto; /* max-width ile ortalamayı sağla */
        margin-right: auto;
        padding-left: 1rem; /* Temel yatay boşluk */
        padding-right: 1rem;
        display: block; /* block olduğundan emin ol */
      }

      /* Blog gönderisi için çok temel başlık alanı boşluğu */
      .blog-detail-page .post-header { /* Sadece blog detayında hedefle */
        padding-bottom: 0.5rem; /* Başlık alanı altında minimal boşluk */
        /* border-bottom dış CSS'i bekleyebilir */
        margin-bottom: 1rem; /* Başlık alanı ile içerik arasına boşluk */
      }

      /* Blog gönderisi için çok temel başlık stili */
      .blog-detail-page h1.post-title { /* Sadece blog detayında hedefle */
        margin-top: 0; /* Üstteki boşluğu sıfırla (header'dan sonra) */
        margin-bottom: 0.5rem; /* Başlık altında minimal boşluk */
        font-size: 1.8em; /* Makul varsayılan boyut */
        line-height: 1.3; /* Makul varsayılan satır yüksekliği */
        font-weight: 600; /* Okunabilirlik için temel kalınlık */
        /* Renk, tam boyut vb. dış CSS'i bekleyebilir */
      }

      /* Ana içerik alanının genişliği almasını sağla */
      .blog-detail-page .markdown-content {
          width: 100%; /* Beklenmedik küçülmeyi önle */
      }

      /* Bunlar için minimal mobil ayarlamalar */
      @media (max-width: 768px) {
        main.blog-detail-page {
          padding-left: 0.75rem; /* Mobil için padding'i azalt */
          padding-right: 0.75rem;
        }
        .blog-detail-page h1.post-title {
          font-size: 1.6em; /* Mobil için biraz daha küçük */
          line-height: 1.25;
        }
      }
      /* === MINIMAL KRITIK BLOG DETAY STilleri SONU === */
		</style>
		
    <!-- Preload Non-Critical CSS -->
    <!-- ÖNEMLİ: Aşağıdaki href değerleri YER TUTUCUDUR! -->
    <!-- Projenizi build ettikten sonra dist/assets içindeki gerçek dosya adlarıyla güncelleyin! -->
    
    {/* Linter hatasını engellemek için @ts-ignore eklendi, onload içindeki 'this' kullanımı standarttır */} 
    {/* @ts-ignore */} 
    <link rel="preload" href="/assets/base.css" as="style" onload="this.onload=null;this.rel='stylesheet'">
    <noscript><link rel="stylesheet" href="/assets/base.css"></noscript>

    {/* Linter hatasını engellemek için @ts-ignore eklendi, onload içindeki 'this' kullanımı standarttır */} 
    {/* @ts-ignore */} 
    <link rel="preload" href="/assets/blog.css" as="style" onload="this.onload=null;this.rel='stylesheet'">
    <noscript><link rel="stylesheet" href="/assets/blog.css"></noscript>

    {/* Linter hatasını engellemek için @ts-ignore eklendi, onload içindeki 'this' kullanımı standarttır */} 
    {/* @ts-ignore */} 
    <link rel="preload" href="/assets/responsive-images.css" as="style" onload="this.onload=null;this.rel='stylesheet'">
    <noscript><link rel="stylesheet" href="/assets/responsive-images.css"></noscript>

    <!-- Not: Navigation.astro gibi bileşenlerden import edilen CSS'ler için de benzer bir işlem gerekebilir -->
    <!-- Astro'nun bunları ayrı bir dosyada mı yoksa ana chunk'ta mı topladığını kontrol edin -->

		<slot name="head" />
	</head>
	<body>
		<header class="site-header">
			<div class="header-container">
				<span class="page-title">{pageTitle}</span>
			</div>
		</header>
		
		<Navigation />
		
		<main class={isBlogDetail ? "blog-detail-page" : "wide-page"}>
			<slot />
		</main>
		
		<footer class="standard-footer">
			<p>© {new Date().getFullYear()} İstanbul Bina Güçlendirme</p>
		</footer>
	</body>
</html> 