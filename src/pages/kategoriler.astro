import { getCategories, getCategoryPostCounts } from '../lib/supabase';

const pageTitle = "Kategoriler";
// Supabase'den verileri çekiyoruz
const categories = await getCategories();
const categoryPostCounts = await getCategoryPostCounts();

// Post sayılarını kategorilere eşleştirelim
const categoriesWithCounts = categories.map(category => {
  const countInfo = categoryPostCounts.find(c => c.id === category.id);
  return {
    ...category,
    postCount: countInfo ? countInfo.post_count : 0
  };
});

// Sadece post sayısı 0'dan büyük olan kategorileri filtreleyelim
const categoriesWithPosts = categoriesWithCounts.filter(category => category.postCount > 0);

