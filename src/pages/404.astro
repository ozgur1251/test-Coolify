---
import BaseLayout from '../layouts/BaseLayout.astro';

const pageTitle = "404 - Sayfa Bulunamadı | İstanbul Bina Güçlendirme";
const description = "Aradığınız sayfa bulunamadı. İstanbul Bina Güçlendirme web sitesinde gezinmeye devam etmek için ana sayfaya dönebilirsiniz.";
---

<BaseLayout 
	pageTitle={pageTitle}
	description={description}
	noindex={true}
>
	<main class="container mx-auto px-4 py-12">
		<div class="error-container">
			<h1 class="error-code">404</h1>
			<p class="error-message">Aradığınız sayfa bulunamadı</p>
			
			<div class="suggestions">
				<h2>Bunları deneyebilirsiniz:</h2>
				<ul>
					<li>URL adresinin doğru yazıldığından emin olun</li>
					<li>Tarayıcınızın geri düğmesine tıklayın ve farklı bir yol deneyin</li>
					<li>Ana sayfaya dönerek aradığınız içeriği menüden bulun</li>
				</ul>
			</div>
			
			<div class="error-actions">
				<a href="/" class="home-link">Ana Sayfaya Dön</a>
				<a href="/blog" class="secondary-link">Blog Yazılarını İncele</a>
			</div>
		</div>
	</main>
	
	<style>
		.error-container {
			text-align: center;
			background-color: white;
			padding: 2rem;
			border-radius: var(--radius-md);
			box-shadow: var(--shadow-md);
			max-width: 600px;
			margin: 0 auto;
		}
		
		.error-code {
			font-size: 8rem;
			color: #ccc;
			margin: 0;
			line-height: 1;
		}
		
		.error-message {
			font-size: 1.5rem;
			color: var(--color-text-light);
			margin: 1rem 0 2rem;
		}
		
		.suggestions {
			margin: 2rem 0;
			text-align: left;
		}
		
		.suggestions h2 {
			font-size: 1.2rem;
			color: var(--color-text);
			margin-bottom: 1rem;
		}
		
		.suggestions ul {
			list-style-type: disc;
			padding-left: 1.5rem;
		}
		
		.suggestions li {
			margin-bottom: 0.5rem;
			color: var(--color-text-light);
		}
		
		.error-actions {
			display: flex;
			flex-direction: column;
			gap: 1rem;
			margin-top: 2rem;
		}
		
		.home-link, .secondary-link {
			display: inline-block;
			padding: 0.75rem 1.5rem;
			text-decoration: none;
			border-radius: var(--radius-sm);
			font-weight: 500;
			transition: all 0.2s;
			text-align: center;
		}
		
		.home-link {
			background-color: var(--color-primary);
			color: white;
		}
		
		.home-link:hover {
			background-color: var(--color-primary-dark);
		}
		
		.secondary-link {
			background-color: var(--color-grey-light);
			color: var(--color-text);
			border: 1px solid var(--color-border);
		}
		
		.secondary-link:hover {
			background-color: var(--color-grey-medium);
		}
		
		@media (min-width: 640px) {
			.error-actions {
				flex-direction: row;
				justify-content: center;
			}
		}
	</style>
</BaseLayout> 