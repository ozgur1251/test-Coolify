---
import BaseLayout from '../layouts/BaseLayout.astro';

const pageTitle = "Sayfa Bulunamadı";
---

<BaseLayout pageTitle={pageTitle}>
	<div class="error-container">
		<h1 class="error-code">404</h1>
		<p class="error-message">Aradığınız sayfa bulunamadı</p>
		<a href="/" class="home-link">Ana Sayfaya Dön</a>
	</div>
	
	<style>
		.error-container {
			text-align: center;
			padding: 50px 0;
		}
		.error-code {
			font-size: 8rem;
			color: #ccc;
			margin: 0;
		}
		.error-message {
			font-size: 1.5rem;
			color: #666;
			margin: 1rem 0 2rem;
		}
		.home-link {
			display: inline-block;
			background-color: #0066cc;
			color: white;
			padding: 10px 20px;
			text-decoration: none;
			border-radius: 4px;
			transition: background-color 0.2s;
		}
		.home-link:hover {
			background-color: #004c99;
		}
	</style>
</BaseLayout> 