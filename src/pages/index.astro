---
// Server tarafında çalışacak kod buraya
import { getCategories, getCategoryPostCounts } from '../lib/supabase';

const pageTitle = "İstanbul Bina Güçlendirme";

// Kategori bilgilerini getirelim
const categories = await getCategories();
const categoryStats = await getCategoryPostCounts();

// Kategori ve post sayılarını birleştirelim
const categoriesWithCounts = categories.map(category => {
  const countInfo = categoryStats.find(c => c.id === category.id);
  return {
    ...category,
    postCount: countInfo ? countInfo.post_count : 0
  };
});

// Tüm kategorileri gösterelim, blog yazısı olmayan kategoriler de dahil
const sortedCategories = [...categoriesWithCounts].sort((a, b) => b.postCount - a.postCount);
---

<html lang="tr">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
		<meta name="description" content="İstanbul'da bina güçlendirme, karbon fiber, kolon, kiriş güçlendirme hizmetleri. CFRP uygulamalarında uzman ekip." />
		<style>
			:root {
				--max-width: 1200px;
				--card-min-width: 280px;
			}
			
			body {
				font-family: Arial, sans-serif;
				max-width: var(--max-width);
				width: 90%;
				margin: 0 auto;
				padding: 20px;
				line-height: 1.6;
			}
			header {
				border-bottom: 1px solid #ddd;
				margin-bottom: 20px;
				padding-bottom: 10px;
			}
			.nav-links {
				display: flex;
				gap: 15px;
				margin-bottom: 20px;
			}
			.categories-grid {
				display: grid;
				grid-template-columns: repeat(auto-fill, minmax(var(--card-min-width), 1fr));
				gap: 25px;
				margin-top: 20px;
				width: 100%;
			}
			.category-card {
				border: 1px solid #ddd;
				border-radius: 8px;
				padding: 15px;
				transition: all 0.3s ease;
				display: flex;
				flex-direction: column;
				height: 100%;
				background-color: #fff;
				box-shadow: 0 2px 5px rgba(0,0,0,0.05);
			}
			.category-card:hover {
				transform: translateY(-5px);
				box-shadow: 0 8px 20px rgba(0,0,0,0.1);
			}
			.image-container {
				width: 100%;
				position: relative;
				margin-bottom: 15px;
				overflow: hidden;
				border-radius: 6px;
				aspect-ratio: 16/10;
			}
			.category-image {
				width: 100%;
				height: 100%;
				object-fit: cover;
				position: absolute;
				top: 0;
				left: 0;
				transition: transform 0.5s ease;
			}
			.category-card:hover .category-image {
				transform: scale(1.05);
			}
			.category-name {
				margin-top: 0;
				margin-bottom: 10px;
				font-size: 1.3rem;
				color: #333;
			}
			.category-description {
				margin: 10px 0;
				font-size: 0.95rem;
				flex-grow: 1;
				/* Açıklama çok uzunsa üç satırda kes */
				display: -webkit-box;
				-webkit-line-clamp: 3;
				-webkit-box-orient: vertical;
				overflow: hidden;
				color: #555;
			}
			.post-count {
				color: #666;
				font-size: 0.9rem;
				margin-bottom: 15px;
				padding-bottom: 5px;
				border-bottom: 1px solid #eee;
			}
			.category-link {
				display: block;
				margin-top: auto;
				color: #fff;
				background-color: #0066cc;
				text-decoration: none;
				text-align: center;
				padding: 10px;
				border-radius: 6px;
				font-weight: 500;
				transition: background-color 0.3s;
			}
			.category-link:hover {
				background-color: #004d99;
			}
			footer {
				margin-top: 50px;
				border-top: 1px solid #ddd;
				padding-top: 20px;
				font-size: 0.9em;
				color: #666;
				text-align: center;
			}
			
			@media (min-width: 1600px) {
				:root {
					--max-width: 1400px;
					--card-min-width: 300px;
				}
			}
			
			/* Mobil uyumluluk için */
			@media (max-width: 768px) {
				:root {
					--card-min-width: 240px;
				}
				body {
					width: 95%;
					padding: 15px;
				}
				.categories-grid {
					gap: 20px;
				}
			}
			
			@media (max-width: 600px) {
				.categories-grid {
					grid-template-columns: 1fr;
				}
				.category-card {
					margin-bottom: 15px;
				}
				.image-container {
					aspect-ratio: 4/3; /* Mobilde daha kare görünüm */
				}
			}
		</style>
	</head>
	<body>
		<header>
			<h1>{pageTitle}</h1>
			<div class="nav-links">
				<a href="/">Ana Sayfa</a>
				<a href="/kategoriler">Kategoriler</a>
				<a href="/hakkinda">Hakkımızda</a>
			</div>
		</header>
		
		<main>
			<p>İstanbul ve çevresinde bina güçlendirme hizmetleri sunuyoruz. CFRP ve Karbon Fiber uygulamalarında uzmanız.</p>
			
			<h2>Bölgelere Göre Hizmetlerimiz</h2>
			<div class="categories-grid">
				{sortedCategories.map((category) => (
					<div class="category-card">
						{category.featured_image && (
							<div class="image-container">
								<img 
									src={category.featured_image} 
									alt={category.name} 
									class="category-image"
									loading="lazy"
								/>
							</div>
						)}
						<h3 class="category-name">{category.name}</h3>
						{category.description && (
							<p class="category-description">{category.description}</p>
						)}
						<p class="post-count">Makale Sayısı: {category.postCount}</p>
						<a href={`/kategori/${category.slug}`} class="category-link">
							Detayları Görüntüle
						</a>
					</div>
				))}
			</div>
		</main>
		
		<footer>
			<p>© {new Date().getFullYear()} İstanbul Bina Güçlendirme</p>
		</footer>
	</body>
</html>
