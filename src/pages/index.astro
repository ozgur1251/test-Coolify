---
// Server tarafında çalışacak kod buraya
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCategories, getCategoryPostCounts } from '../lib/supabase';

const pageTitle = "İstanbul Bina Güçlendirme";

// Kategori bilgilerini getirelim
const categories = await getCategories();
const categoryStats = await getCategoryPostCounts();

// Kategori ve post sayılarını birleştirelim
const categoriesWithCounts = categories.map(category => {
  const countInfo = categoryStats.find(c => c.id === category.id);
  return {
    ...category,
    postCount: countInfo ? countInfo.post_count : 0
  };
});

// Tüm kategorileri gösterelim, blog yazısı olmayan kategoriler de dahil
const sortedCategories = [...categoriesWithCounts].sort((a, b) => b.postCount - a.postCount);
---

<BaseLayout pageTitle={pageTitle}>
  <p>İstanbul ve çevresinde bina güçlendirme hizmetleri sunuyoruz. CFRP ve Karbon Fiber uygulamalarında uzmanız.</p>
  
  <h2>Bölgelere Göre Hizmetlerimiz</h2>
  <div class="categories-grid">
    {sortedCategories.map((category) => (
      <div class="category-card card">
        {category.featured_image && (
          <div class="image-container">
            <img 
              src={category.featured_image} 
              alt={category.name} 
              class="category-image"
              loading="lazy"
            />
          </div>
        )}
        <h3 class="category-name">{category.name}</h3>
        {category.description && (
          <p class="category-description">{category.description}</p>
        )}
        <p class="post-count">Makale Sayısı: {category.postCount}</p>
        <a href={`/kategori/${category.slug}`} class="category-link btn btn-primary">
          Detayları Görüntüle
        </a>
      </div>
    ))}
  </div>

  <style>
    .categories-grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      column-gap: 35px;
      row-gap: 45px;
      margin-top: 40px;
      margin-bottom: 40px;
      width: 100%;
    }
    
    .category-card {
      padding: 20px;
      display: flex;
      flex-direction: column;
      height: 100%;
      border-radius: var(--radius-lg);
    }
    
    .category-card:hover {
      transform: translateY(-5px);
      box-shadow: var(--shadow-lg);
      border-color: var(--color-border-dark);
    }
    
    .image-container {
      width: 100%;
      position: relative;
      margin-bottom: 20px;
      overflow: hidden;
      border-radius: var(--radius-md);
      aspect-ratio: 16/10;
    }
    
    .category-image {
      width: 100%;
      height: 100%;
      object-fit: cover;
      position: absolute;
      top: 0;
      left: 0;
      transition: transform var(--transition-slow);
    }
    
    .category-card:hover .category-image {
      transform: scale(1.05);
    }
    
    .category-name {
      margin-top: 0;
      margin-bottom: 15px;
      font-size: 1.4rem;
      color: var(--color-text);
      letter-spacing: -0.01em;
    }
    
    .category-description {
      margin: 0 0 15px 0;
      font-size: 1rem;
      flex-grow: 1;
      /* Açıklama çok uzunsa üç satırda kes */
      display: -webkit-box;
      -webkit-line-clamp: 3;
      -webkit-box-orient: vertical;
      overflow: hidden;
      color: var(--color-text-light);
      line-height: 1.5;
    }
    
    .post-count {
      color: var(--color-text-light);
      font-size: 0.9rem;
      margin-bottom: 20px;
      padding-bottom: 10px;
      border-bottom: 1px solid var(--color-grey-medium);
    }
    
    .category-link {
      display: block;
      margin-top: auto;
      padding: 12px;
      border-radius: var(--radius-md);
    }
    
    .category-link:hover {
      transform: translateY(-2px);
      box-shadow: 0 5px 10px rgba(0,0,0,0.1);
    }
    
    @media (max-width: 1024px) {
      .categories-grid {
        grid-template-columns: repeat(2, 1fr);
        row-gap: 35px;
      }
    }
    
    @media (max-width: 600px) {
      .categories-grid {
        grid-template-columns: 1fr;
        gap: 30px;
        margin-top: 30px;
      }
      
      .category-card {
        margin-bottom: 0;
        padding: 15px;
      }
      
      .image-container {
        aspect-ratio: 4/3; /* Mobilde daha kare görünüm */
        margin-bottom: 15px;
      }
    }
  </style>
</BaseLayout>
